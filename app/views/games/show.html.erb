  $( function() {
    $('.pieces').draggable({
      stack: '#board',
      containment: '#board',
      start: function(event, ui){
      var old_x = $(this).data("x")
      var old_y = $(this).data("x")
      console.log(old_x)
      }
    })

    $('.white, .black').droppable({
      drop: function(ev, ui) {
        $(ui.draggable).detach().css({top: 0,left: 0}).appendTo(this);
        var new_x = $(this).data("x")
        var new_y = $(this).data("y")
        console.log(new_x);
      }
    });

